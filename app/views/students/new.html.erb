
<!-- new.html.erb-->

<div class="button-title-fade animated fadeIn">
    <!-- style="background-color: #3B7EA1;" -->
    <nav class="navbar navbar-light bg-faded" >
      <div class="button-bar">
        <div id="btn-logout">
            <%= button_to "App Log Out", app_logout_path, method: "post", id:"btn-outline-danger", class: "btn btn-outline-danger"%>
        </div>
        <div id="btn-login">
            <%= button_to "Tutor Sign In", tutors_path, method: "get", id:"btn-outline-success", class: "btn btn-outline-success"%>
        </div>
      </div>
    </nav>

    <div id="title-container">
        <%= image_tag "slc_logo.png", id:"slc-logo-pic-student-signup" %>  
    </div>
</div>
 <h1 class="subtitle animated fadeInLeft">Writing Service Sign-in</h1>


<div class="container-fluid animated fadeInUp" id="form-container">

    <%= form_tag(students_path, method: "post") do %>

         <!--<label class="sr-only" for="exampleInputEmail2">Email address</label> -->
        <div class="row" id="row">
            <div class="col-2">
                <%= label_tag(:last_name, "Last Name *", class: "label") %>
                <%= text_field_tag "student_last_name", nil, placeholder: "Last Name", class: "form_signup form-control", require: true   %>
            </div>

            <div class="col-2">
                <%= label_tag(:first_name, "First Name *", class: "label") %>
                <%= text_field_tag "student_first_name", nil, placeholder: "First Name", class: "form_signup form-control", required: true  %>
            </div>
        </div>
        <div class="row" id="row">
            <div class="col-2">
                <%= label_tag(:sid, "Student ID Number *", class: "label") %>
                <%= number_field_tag "student_sid", nil, placeholder: "000000000", class: "form_signup form-control", required: true, max: 9999999999, min: 10000000 %>
            </div>
            <div class="col-2">
                <%= label_tag(:email, "E-mail *", class: "label") %>
                <%= email_field_tag "student_email", nil, placeholder:"example@gmail.com", class: "form_signup form-control", required: true  %>
            </div>
        </div>

        <div class="radio row" id="radio-row">
            <%= label_tag(:meet_type, "Schedule type *", class: "radio-signup col-3>") %>
        </div>
        <div class="radio row" id="radio-button-row">
            <%= radio_button_tag(:meet_type, "drop-in", required: true) %>
            <div class="radio-button-label"> Drop-in </div>
        </div>
        <div class="radio row" id="radio-button-row">
            <%= radio_button_tag(:meet_type, "scheduled") %> 
            <div class="radio-button-label"> Appointment </div>
        </div>
        <div class="radio row" id="radio-button-row">
            <%= radio_button_tag(:meet_type, "weekly") %>
            <div class="radio-button-label"> Weekly Session </div>
        </div>
                
        <div class="row" id="row">
            <div class="col-3">
                <%= label_tag(:course, "Course *", class: "label") %>
                <%= select_tag(:course, options_for_select([["Please choose a course...", "0"], ["Other (Enter course DEPARTMENT and NUMBER in next box)", "Other"], "African American R1A", "African American R1B", "American Studies 10", "Anthropology R5A", "Anthropology R5B", "Asian American Studies R2A", "Asian American Studies R2B", "Asian Studies 10", "Astronomy 10", "Chicano Studies R1A", "Chicano Studies R1B", "Classics R44", "College Writing 1", "College Writing R1A", "College Writing R1B", "College Writing R4A", "College Writing R4B", "Comparative Literature R1A", "Comparative Literature R1B", "Economics 191", "English R1A", "English R1B", "English 45A", "English 45B", "English 45C", "ESPM 50AC", "ESPM 155AC", "French R1A", "French R1B", "Film and Media R1A", "Film and Media R1B", "Gender & Women's Studies 50AC", "German R5A", "German R5B", "History of Art R1A", "History of Art R1B", "Interdisciplinary Studies Field 191", "International Area Studies 45", "Italian Studies R5A ", "Italian Studies R5B ", "Legal Studies R1A", "Legal Studies R1B", "Linguistics Studies R1A", "Linguistics Studies R1B", "Media Studies 10", "Native American Studies R1A", "Native American Studies R1B", "Near Eastern Studies R1A", "Near Eastern Studies R1B", "Peace and Conflict Studies 10", "Philosophy R1A", "Philosophy R1B", "Philosophy 100", "Political Science 1", "Political Science 2", "Political Science 5", "Psychology 1", "Psychology 2", "Rhetoric R1A", "Rhetoric R1B", "Scandinavian R5A", "Scandinavian R5B", "Slavic Languages and Literatures R5A", "Slavic Languages and Literatures R5B", "Sociology 1", "Sociology 3AC", "Sociology 5", "Sociology 121", "Sociology 160", "Sociology 194", "South and Southeast Asia Studies R5A", "South and Southeast Asia Studies R5B", "South Asian Studies R5A", "South Asian Studies R5B", "Spanish R1A", "Spanish R1B", "Theater, Dance, and  Performance R1A", "Theater, Dance, and  Performance R1B", "UGBA 10"]), class: "form_signup form-control", required: true ) %>
            </div>
        </div>

        <div class="row" id="row">
            <div class="col-4">
                <%= label_tag(:course_other, "If other, please specify the DEPARTMENT and NUMBER of your course.", class: "label") %>
                DO NOT ABBREVIATE your department. (Ex: Philosophy 102)
                <%= text_field_tag "course_other", nil, placeholder: "", class: "form_signup form-control", require: false   %>
            </div>
        </div>

        <div class="radio row" id="radio-row">
            <%= label_tag(:residency, "What is your residency status? *", class: "radio-signup col-3>") %>
        </div>
        <div class="radio row" id="radio-button-row">
            <%= radio_button_tag(:residency, true, required: true) %> 
            <div class="radio-button-label"> Domestic </div>
        </div>
        <div class="radio row" id="radio-button-row">
            <%= radio_button_tag(:residency, false) %>
            <div class="radio-button-label"> International </div>
        </div>

        <div class="radio row" id="radio-row">
            <%= label_tag(:transfer, "Are you a transfer student? *", class: "radio-signup col-3>") %>
        </div>
        <div class="radio row" id="radio-button-row">
            <%= radio_button_tag(:transfer, false, required: true) %> 
            <div class="radio-button-label"> No </div>
        </div>
        <div class="radio row" id="radio-button-row">
            <%= radio_button_tag(:transfer, false) %>
            <div class="radio-button-label"> Yes </div>
        </div>

        <div class="row" id="row">
            <div class="col-4">
                <%= label_tag(:concurrency, "Are you a concurrent enrollment student? (e.g., Berkeley Extension, BISP, UCICP, etc.) *", class: "radio-signup col-3>") %>
            </div>
        </div>
        <div class="radio row" id="radio-button-row">
            <%= radio_button_tag(:concurrency, false, required: true) %> 
            <div class="radio-button-label"> No </div>
        </div>
        <div class="radio row" id="radio-button-row">
            <%= radio_button_tag(:concurrency, false) %>
            <div class="radio-button-label"> Yes </div>
        </div>

        <div class="row" id="row">
            <div class="col-4">
                <%= label_tag(:concurrent_institution, "If yes, please indicate your other program and/or institution:", class: "label") %>
                <%= text_field_tag "concurrent_institution", nil, placeholder: nil, class: "form_signup form-control", require: true   %>
            </div>
        </div>
        </br>

        <div class="row" id="row">
            <div class="col-4">
                <%= submit_tag"Submit", :id => "form-submit", :class =>"btn btn-primary" %>
            </div>
        </div>
    <% end %>

</div>